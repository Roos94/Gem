<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dtu.smmac.gem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Main"
            android:label="@string/app_name"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.NewItem"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.ItemView"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Dating"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Description"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Subject"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.References"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Activity.Term"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ReceivedDate"
            android:theme="@style/SK"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Camera"
            android:theme="@style/SK"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
